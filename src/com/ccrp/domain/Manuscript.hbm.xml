<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ccrp.domain.Manuscript" table="manuscript">
        <id column="mid" type="java.lang.Long" name="mid">
            <generator class="increment"></generator>
        </id>
        <property name="title" column="title" type="java.lang.String" not-null="true" length="20" unique="true"/>
        <property name="tags" column="tags" type="java.lang.String" not-null="true" length="50"/>
        <property name="author" column="author" type="java.lang.String" not-null="true" length="10" />
        <property name="type" column="type" type="java.lang.String" not-null="true" length="20" />
        <property name="content" column="content" type="LONGTEXT" not-null="true" length="2000" />
        <property name="releaseDate" column="releaseDate" not-null="true"  />
        <property name="editor" column="editor" type="java.lang.String"  />
        <property name="firTime" column="firTime"  />
        <property name="firState" column="firState" type="java.lang.String" length="5" />
        <property name="reviewer" column="reviewer" length="20" />
        <property name="secTime" column="secTime"  />
        <property name="secState" column="secState" type="java.lang.String"  length="5"  />
        <property name="opinion" column="opinion" type="java.lang.String" length="500" />
        <property name="release" column="release" type="java.lang.String" length="5"  />
         
         <many-to-one name="uid" column="uid" class="com.ccrp.domain.User"></many-to-one>
         <many-to-one name="eid" column="eid" class="com.ccrp.domain.Editor"></many-to-one>
         <many-to-one name="rid" column="rid" class="com.ccrp.domain.Reviewer"></many-to-one>
         
    </class>
</hibernate-mapping>
