<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ccrp.domain.User" table="user">
        <id column="aid" type="java.lang.String" name="aid">
            <generator class="assigned"></generator>
        </id>
        <property name="title" column="title" type="java.lang.String" not-null="true" length="20" unique="true"/>
        <property name="content" column="content" type="LONGTXT" not-null="true" />
        <property name="author" column="author" type="java.lang.String" not-null="true" length="10" />
        <property name="tags" column="tags" type="java.lang.String" not-null="true" length="40" />
        <property name="pageviews" column="pageviews" type="java.lang.long" not-null="true" />
         

         <many-to-one name="creator" column="uid" class="com.ccrp.domain.User" ></many-to-one>
         
         <many-to-one name="editor" column="editor" class="com.ccrp.domain.Editor"></many-to-one>
         
         <set name="collectors" inverse="true" cascade="all">
             <key column="uid"></key>
             <one-to-many class="com.ccrp.domain.User"/>
         </set>
         
         <set name="comments" inverse="true" cascade="all">
             <key column="cid"></key>
             <one-to-many class="com.ccrp.domain.Comment"></one-to-many>
         </set>
         
    </class>
</hibernate-mapping>
