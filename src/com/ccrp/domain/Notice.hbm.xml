<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ccrp.domain.User" table="user">
        <id column="uid" type="java.lang.Long" name="uid">
            <generator class="increment"></generator>
        </id>
        <property name="account" column="account" type="java.lang.String" not-null="true" length="20" unique="true"/>
        <property name="passwod" column="passwod" type="java.lang.String" not-null="true" length="64"/>
        <property name="sex" column="sex" type="java.lang.String" not-null="true" length="2" />
        <property name="nick" column="nick" type="java.lang.String" not-null="true" length="20" />
        <property name="phone" column="phone" type="java.lang.String" not-null="true" length="15" />
        <property name="address" column="address" type="java.lang.String" not-null="true" length="50" />
        <property name="email" column="email" type="java.lang.String" not-null="true" length="20" />
        <property name="college" column="email" type="java.lang.String" not-null="true" length="20" />
        <property name="major" column="major" type="java.lang.String" not-null="true" length="20" />
        <property name="birthday" column="birthday" not-null="true" />
        <property name="registDate" column="registDate" not-null="true" />
        <property name="hide" column="hide" type="java.lang.String"  length="5" not-null="true" />
        <property name="grade" column="grade" type="java.lang.String" length="10" not-null="true" />
        <property name="photo" column="photo" type="java.lang.String" length="100" not-null="true" />
         
         <set name="articles" inverse="true" cascade="all">
             <key column="uid"></key>
             <one-to-many class="com.ccrp.domain.Article"/>
         </set>
         
         <set name="comments" inverse="true" cascade="all">
             <key column="uid"></key>
             <one-to-many class="com.ccrp.doamin.Comment"></one-to-many>
         </set>
         
         <set name="manuscripts" inverse="true" cascade="all">
             <key column="uid"></key>
             <one-to-many class="com.ccrp.domain.Manuscript"/>
         </set>
         
         <set name="collections" table="user_article" inverse="true" cascade="all">
             <key column="uid"></key>
             <many-to-many class="com.ccrp.domain.Article" column="aid"></many-to-many>
         </set>
         
    </class>
</hibernate-mapping>
