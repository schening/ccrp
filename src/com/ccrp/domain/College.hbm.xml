<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ccrp.domain.Record" table="record">
        <id column="rid" type="java.lang.Long" name="rid">
            <generator class="increment"></generator>
        </id>
        <property name="cotent" column="content" type="java.lang.String" not-null="true" length="200" />
        <property name="operator" column="operator" type="java.lang.String"  not-null="true" length="20"/>
        <property name="identify" column="identify" type="java.lang.String" not-null="true" length="20" />
        <property name="username" column="username" type="java.lang.String" not-null="true" length="20" />
        <property name="operateDate" column="operateDate" not-null="true" />
    </class>
</hibernate-mapping>
