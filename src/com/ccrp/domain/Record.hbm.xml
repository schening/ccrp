<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ccrp.domain.Notice" table="notice">
        <id column="nid" type="java.lang.Long" name="nid">
            <generator class="increment"></generator>
        </id>
        <property name="content" column="content" type="java.lang.String" not-null="true" length="100" />
        <property name="creator" column="creator" type="java.lang.String" not-null="true" length="20"/>
        <property name="createDate" column="createDate" not-null="true" />
    </class>
</hibernate-mapping>
